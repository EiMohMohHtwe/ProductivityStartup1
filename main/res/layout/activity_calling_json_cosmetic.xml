<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CallingJsonCosmetic">

    <VideoView
        android:id="@+id/vdvApplecake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_food_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:padding="@dimen/fav_margin"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtviewIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ကုန်ကြမ်းပစ္စည်းအမျိုးအစား\n"
                android:textSize="22dp"
                android:layout_marginLeft="@dimen/fav_margin"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txtviewIngredients"
                android:paddingLeft="@dimen/fav_margin"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtviewMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvIngredients"
                android:text="ပြုလုပ်နည်းအဆင့်ဆင့်\n"
                android:textSize="22dp"
                android:paddingLeft="@dimen/fav_margin"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txtviewMethod"
                android:paddingLeft="10dp"
                android:textSize="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>